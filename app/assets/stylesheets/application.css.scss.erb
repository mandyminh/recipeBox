@import "bootstrap-sprockets";
@import "bootstrap";

@mixin box-shadow {
	-webkit-box-shadow: rgba(0, 0, 0, 0.09) 0 2px 0;
	-moz-box-shadow: rgba(0, 0, 0, 0.09) 0 2px 0;
	box-shadow: rgba(0, 0, 0, 0.09) 0 2px 0;
}

$red: #DB6161;

body {
	background: white;
}
body {
  height: 100%;
  background: url(<%= asset_path 'recipe_boxlogo.jpg' %>) no-repeat center center fixed;
  background-size: cover;
}

.main_content {
	padding: 100 0 50px 100;
}

.alert {
	padding: 15px;
	margin-bottom: 20px;
	border: 1px solid transparent;
	border-radius: 5px;
	@include box-shadow;
	background: white;
	font-weight: bold;
}


.navbar {
	margin-top: 0px;
	@include box-shadow;
	border: none;
		background: white;
	.navbar-brand {
		text-transform: uppercase;
		letter-spacing: 5px;
	font-family: 'Amatic SC', cursive;
		font-size: 25px;
		a {
			color: #FF8000;
		}
	}
}

.recipe {
	background: white;
	border-radius: 5px;
	margin-top: 100px;
	margin-bottom: 30px;
	@include box-shadow;
	.image_wrapper {
		width: 100%;
		border-radius: 5px 5px 0 0;
		overflow: hidden;
	}
	img {
		width: 100%;
		height: 100%;
		-webkit-transition: all .3s ease-out;
	  -moz-transition: all .3s ease-out;
	  -o-transition: all .3s ease-out;
    transition: all .3s ease-out;
		&:hover {
			transform: scale(1.075);
		}
	}
	h2 {
		padding: 15px 5%;
		margin: 0;
		font-size: 20px;
		font-weight: normal;
		line-height: 1.5;
		a {
			color: $red;
		}
	}
}

#recipe_top {
	margin-center: 100px;
}

#recipe_info, #ingredients, #directions {
	background: white;
	
	@include box-shadow;
	min-height: 360px;
	border-radius: 5px;
	padding: 2em 8%;
}

.recipe_image {
	width: 100%;
	border-radius: 5px;
	@include box-shadow;
}

#recipe_info {
	h1 {
		font-size: 36px;
		font-weight: normal;
		color: #FF8000;
		
	}
	.description {
		color: black;
		font-size: 20px;

	}
}

#ingredients, #directions {
	margin-bottom: 50px;

	ul, ol {
		padding-left: 58px;
		li {
			padding: 1em 0;
			border-bottom: 1px solid #EAEAEA;
		}
	}
}

.form-inline {
	margin-top: 15px;
}
.form-input {
	width: 65% !important;
	float: left;
}
.form-button {
	float: left;
	width: 30% !important;
	margin-left: 5%;
		margin-top: 5px;
}
.add-button {
	margin-top: 5px;
}
